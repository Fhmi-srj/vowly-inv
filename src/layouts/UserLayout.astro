---
import "../styles/global.css";
import { LogOut, LayoutDashboard, Settings, Users, MessageCircle, Heart, User, QrCode, Printer } from "lucide-react";

interface Props {
  title?: string;
  invitationId?: number;
  activeTab?: string;
  userName?: string;
  userPhone?: string;
}

const { 
  title = "Dashboard - Vowly",
  invitationId,
  activeTab = "overview",
  userName,
  userPhone
} = Astro.props;

// Use real user data if provided, fallback to default for dev
const userData = {
  name: userName || "Buyer Name",
  phone: userPhone || "08123456789"
};

const getLink = (tab: string) => {
  if (invitationId) {
    return `/dashboard/manage/${invitationId}?tab=${tab}`;
  }
  return `/dashboard?tab=${tab}`;
};
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,600&family=Outfit:wght@100;200;300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-slate-50 dark:bg-slate-950 font-sans text-slate-900 dark:text-slate-100">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="fixed inset-y-0 left-0 z-50 w-72 bg-white dark:bg-slate-900 border-r border-slate-200 dark:border-white/5 hidden lg:block">
        <div class="flex flex-col h-full p-8">
          <div class="flex items-center gap-3 mb-12">
            <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center text-white">
              <Heart className="h-6 w-6" />
            </div>
            <span class="text-2xl font-serif italic font-bold">Vowly</span>
          </div>

          <nav class="flex-1 space-y-1.5 overflow-y-auto pr-2 custom-scrollbar">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] px-6 mb-2 mt-4">Menu Utama</p>
            
            <a 
                href={getLink("overview")} 
                class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "overview" 
                    ? "bg-primary text-white shadow-lg shadow-primary/20" 
                    : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
            >
              <LayoutDashboard size={18} />
              <span class="text-sm">Ringkasan</span>
            </a>

            {invitationId && (
              <>
                <a 
                    href={getLink("rsvp")} 
                    class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "rsvp" 
                        ? "bg-primary text-white shadow-lg shadow-primary/20" 
                        : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
                >
                  <Users size={18} />
                  <span class="text-sm">Data RSVP</span>
                </a>
                <a 
                    href={getLink("wishes")} 
                    class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "wishes" 
                        ? "bg-primary text-white shadow-lg shadow-primary/20" 
                        : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
                >
                  <MessageCircle size={18} />
                  <span class="text-sm">Ucapan & Doa</span>
                </a>
                <a 
                    href={getLink("qr")} 
                    class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "qr" 
                        ? "bg-primary text-white shadow-lg shadow-primary/20" 
                        : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
                >
                  <QrCode size={18} />
                  <span class="text-sm">QR Generator</span>
                </a>
                <a 
                    href={getLink("pdf")} 
                    class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "pdf" 
                        ? "bg-primary text-white shadow-lg shadow-primary/20" 
                        : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
                >
                  <Printer size={18} />
                  <span class="text-sm">Design PDF</span>
                </a>
              </>
            )}

            <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] px-6 mb-2 mt-8">Akun & Sistem</p>

            <a 
                href={getLink("settings")} 
                class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "settings" 
                    ? "bg-primary text-white shadow-lg shadow-primary/20" 
                    : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
            >
              <Settings size={18} />
              <span class="text-sm">Pengaturan</span>
            </a>
            <a 
                href={getLink("profile")} 
                class={`flex items-center gap-4 px-6 py-3.5 rounded-2xl font-bold transition-all ${activeTab === "profile" 
                    ? "bg-primary text-white shadow-lg shadow-primary/20" 
                    : "text-slate-500 hover:bg-slate-50 dark:hover:bg-white/5"}`}
            >
              <User size={18} />
              <span class="text-sm">Profil Saya</span>
            </a>
          </nav>

          <form action="/api/auth/logout" method="POST" class="mt-auto">
            <button type="submit" class="w-full flex items-center gap-4 px-6 py-4 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 rounded-2xl font-bold transition-all">
              <LogOut size={20} />
              <span>Log Out</span>
            </button>
          </form>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 lg:ml-72 min-h-screen">
        <!-- Header -->
        <header class="sticky top-0 z-40 bg-white/80 dark:bg-slate-950/80 backdrop-blur-xl border-b border-slate-200 dark:border-white/5 px-8 h-20 flex items-center justify-between">
          <h1 class="text-xl font-bold tracking-tight">{title}</h1>
          <div class="flex items-center gap-4">
            <div class="text-right hidden sm:block">
              <p class="text-sm font-bold">{userData.name}</p>
              <p class="text-[10px] text-slate-400 uppercase tracking-widest font-black">USER / PEMBELI</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-slate-100 dark:bg-white/10 overflow-hidden border-2 border-primary/20">
               <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${userData.name}`} alt="avatar" />
            </div>
          </div>
        </header>

        <div class="p-8">
           <slot />
        </div>
      </main>
    </div>
  </body>
</html>
