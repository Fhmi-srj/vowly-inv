---
import "../styles/global.css";
import Sidebar from "../components/Dashboard/Sidebar";
import { LogOut, LayoutDashboard, Settings, Users, MessageCircle, Heart, User, QrCode, Printer, Menu, X } from "lucide-react";

interface Props {
  title?: string;
  invitationId?: number;
  activeTab?: string;
  userName?: string;
  userPhone?: string;
}

const { 
  title = "Dashboard - Vowly",
  invitationId,
  activeTab = "overview",
  userName,
  userPhone
} = Astro.props;

// Use real user data if provided, fallback to default for dev
const userData = {
  name: userName || "Buyer Name",
  phone: userPhone || "08123456789"
};

const getLink = (tab: string) => {
  if (invitationId) {
    return `/dashboard/manage/${invitationId}?tab=${tab}`;
  }
  return `/dashboard?tab=${tab}`;
};
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,600&family=Outfit:wght@100;200;300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-slate-50 dark:bg-slate-950 font-sans text-slate-900 dark:text-slate-100">
    <div class="flex min-h-screen">
      <!-- SPA Sidebar -->
      <Sidebar client:load invitationId={invitationId} userName={userData.name} initialTab={activeTab as any} />

      <!-- Main Content -->
      <main class="flex-1 lg:ml-72 min-h-screen">
        <!-- Header -->
        <header class="sticky top-0 z-40 bg-white/80 dark:bg-slate-950/80 backdrop-blur-xl border-b border-slate-200 dark:border-white/5 px-8 h-20 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <button id="open-sidebar" class="lg:hidden p-2 text-slate-500 hover:bg-slate-100 dark:hover:bg-white/5 rounded-lg">
              <Menu size={24} />
            </button>
            <h1 class="text-xl font-bold tracking-tight">{title}</h1>
          </div>
          <div class="flex items-center gap-4">
            <div class="text-right hidden sm:block">
              <p class="text-sm font-bold">{userData.name}</p>
              <p class="text-[10px] text-slate-400 uppercase tracking-widest font-black">USER / PEMBELI</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-slate-100 dark:bg-white/10 overflow-hidden border-2 border-primary/20">
               <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${userData.name}`} alt="avatar" />
            </div>
          </div>
        </header>

        <div class="p-8">
           <slot />
        </div>
      </main>
    </div>

    <script>
      const openBtn = document.getElementById('open-sidebar');
      openBtn?.addEventListener('click', () => {
        // Trigger React Sidebar toggle via custom window function defined in Sidebar.tsx
        if ((window as any).toggleSidebar) {
          (window as any).toggleSidebar();
        }
      });
    </script>
  </body>
</html>
