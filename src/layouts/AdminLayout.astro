---
import "../styles/global.css";
import { LogOut, LayoutDashboard, Users, CreditCard, Palette, Globe, Shield, Bell } from "lucide-react";

interface Props {
  title?: string;
}

const { title = "Admin Panel - Vowly" } = Astro.props;

// Mock admin data
const adminData = {
  name: "Platform Admin",
  role: "Owner"
};
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,600&family=Outfit:wght@100;200;300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-slate-900 font-sans text-slate-100">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="fixed inset-y-0 left-0 z-50 w-72 bg-slate-950 border-r border-white/5 hidden lg:block">
        <div class="flex flex-col h-full p-8">
          <div class="flex items-center gap-3 mb-12">
            <div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-indigo-500/20">
              <Shield className="h-6 w-6" />
            </div>
            <span class="text-2xl font-serif italic font-bold tracking-tight">Vowly <span class="text-indigo-500 font-sans text-xs not-italic font-black align-top ml-1">PRO</span></span>
          </div>

          <nav class="flex-1 space-y-2">
            <a href="/admin" class="flex items-center gap-4 px-6 py-4 bg-white/5 rounded-2xl text-white font-bold border border-white/5 transition-all">
              <LayoutDashboard size={20} className="text-indigo-400" />
              <span>Overview</span>
            </a>
            <a href="/admin/users" class="flex items-center gap-4 px-6 py-4 text-slate-400 hover:bg-white/5 rounded-2xl transition-all">
              <Users size={20} />
              <span>Manajemen User</span>
            </a>
            <a href="/admin/invitations" class="flex items-center gap-4 px-6 py-4 text-slate-400 hover:bg-white/5 rounded-2xl transition-all">
              <Globe size={20} />
              <span>Semua Undangan</span>
            </a>
            <a href="/admin/templates" class="flex items-center gap-4 px-6 py-4 text-slate-400 hover:bg-white/5 rounded-2xl transition-all">
              <Palette size={20} />
              <span>Template Registry</span>
            </a>
            <a href="/admin/payments" class="flex items-center gap-4 px-6 py-4 text-slate-400 hover:bg-white/5 rounded-2xl transition-all">
              <CreditCard size={20} />
              <span>Transaksi</span>
            </a>
          </nav>

          <form action="/api/auth/logout" method="POST" class="mt-auto">
            <button type="submit" class="w-full flex items-center gap-4 px-6 py-4 text-slate-500 hover:text-white hover:bg-red-500/10 rounded-2xl font-bold transition-all group">
              <LogOut size={20} className="group-hover:text-red-500" />
              <span>Log Out</span>
            </button>
          </form>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 lg:ml-72 min-h-screen">
        <!-- Header -->
        <header class="sticky top-0 z-40 bg-slate-950/80 backdrop-blur-xl border-b border-white/5 px-8 h-20 flex items-center justify-between">
          <div class="flex items-center gap-4">
             <h1 class="text-xl font-bold tracking-tight">{title}</h1>
          </div>
          
          <div class="flex items-center gap-6">
            <button class="relative p-2 text-slate-400 hover:text-white transition-colors">
              <Bell size={20} />
              <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border-2 border-slate-950"></span>
            </button>
            <div class="h-8 w-px bg-white/10"></div>
            <div class="flex items-center gap-4">
              <div class="text-right">
                <p class="text-sm font-bold text-white uppercase tracking-tight">{adminData.name}</p>
                <p class="text-[10px] text-indigo-400 font-black uppercase tracking-widest">{adminData.role}</p>
              </div>
              <div class="w-10 h-10 rounded-full bg-indigo-500/20 border-2 border-indigo-500/50 flex items-center justify-center text-indigo-500 font-bold">
                AD
              </div>
            </div>
          </div>
        </header>

        <div class="p-8">
           <slot />
        </div>
      </main>
    </div>
  </body>
</html>
