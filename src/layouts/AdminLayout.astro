---
import "../styles/global.css";
import { Bell, Shield } from "lucide-react";
import AdminSidebar from "../components/Dashboard/Admin/AdminSidebar";
import AdminPanel from "../components/Dashboard/Admin/AdminPanel";

interface Props {
  title?: string;
}

const { title = "Admin Panel - Vowly" } = Astro.props;

// Mock admin data
const adminData = {
  name: "Platform Admin",
  role: "Owner"
};
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,600&family=Outfit:wght@100;200;300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-slate-50 font-sans text-slate-950">
    <div class="flex min-h-screen">
      <!-- Sidebar (React SPA) -->
      <AdminSidebar client:load />

      <!-- Main Content -->
      <main class="flex-1 lg:ml-72 min-h-screen">
        <!-- Header -->
        <header class="sticky top-0 z-40 bg-white/80 backdrop-blur-xl border-b border-slate-200 px-8 h-20 flex items-center justify-between">
          <div class="flex items-center gap-4">
             <h1 class="text-xl font-bold tracking-tight text-slate-900">{title}</h1>
          </div>
          
          <div class="flex items-center gap-6">
            <button class="relative p-2 text-slate-400 hover:text-slate-900 transition-colors">
              <Bell size={20} />
              <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
            </button>
            <div class="h-8 w-px bg-slate-200"></div>
            <div class="flex items-center gap-4">
              <div class="text-right">
                <p class="text-sm font-bold text-slate-900 uppercase tracking-tight">{adminData.name}</p>
                <p class="text-[10px] text-indigo-600 font-black uppercase tracking-widest">{adminData.role}</p>
              </div>
              <div class="w-10 h-10 rounded-full bg-indigo-100 border border-indigo-100 flex items-center justify-center text-indigo-600 font-bold">
                AD
              </div>
            </div>
          </div>
        </header>

        <div class="p-8">
           <!-- Admin SPA Panel -->
           <AdminPanel client:load />
           
           <!-- Any legacy slot content (unused in SPA) -->
           <div class="hidden"><slot /></div>
        </div>
      </main>
    </div>
  </body>
</html>
